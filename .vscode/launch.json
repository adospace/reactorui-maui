{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET MAUI",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build"
        },
        {
            "name": "MauiReactor.TestApp",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build",
            "project": "${workspaceFolder}/samples/MauiReactor.TestApp/MauiReactor.TestApp.csproj"
        },
        {
            "name": "HotReloadConsole (Slim)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-hotreload-console",
            "program": "${workspaceFolder}/src/MauiReactor.HotReloadConsole/bin/Debug/net10.0/MauiReactor.HotReloadConsole.dll",
            "args": [
                "-f", "${input:targetFramework}",
                "-p", "${input:projectPath}",
                "-m", "Slim"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "HotReloadConsole (Full)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-hotreload-console",
            "program": "${workspaceFolder}/src/MauiReactor.HotReloadConsole/bin/Debug/net10.0/MauiReactor.HotReloadConsole.dll",
            "args": [
                "-f", "${input:targetFramework}",
                "-p", "${input:projectPath}",
                "-m", "Full"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "projectPath",
            "type": "promptString",
            "description": "Path to the project file to hot-reload",
            "default": "${workspaceFolder}/samples/MauiReactor.TestApp/MauiReactor.TestApp.csproj"
        },
        {
            "id": "targetFramework",
            "type": "pickString",
            "description": "Select target framework",
            "options": [
                "net10.0-android",
                "net10.0-ios",
                "net10.0-maccatalyst",
                "net10.0-windows10.0.19041.0"
            ],
            "default": "net10.0-maccatalyst"
        }
    ]
}